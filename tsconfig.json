{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "paths": {
      "@/*": ["src/*"],
      "components/*": ["src/components/*"],
      "theme/*": ["src/theme/*"],
      "utils/*": ["src/utils/*"],
      "script/*": ["src/script/*"]
    },
    "types": ["vite/client", "@histoire/plugin-vue/components", "@vueuse/core", "@idux/components/types"]
  },
  "exclude": [".histoire", "node_modules", "public"]
}
